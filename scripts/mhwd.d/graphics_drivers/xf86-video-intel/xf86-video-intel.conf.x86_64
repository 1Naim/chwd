NAME="xf86-video-intel"
FREEDRIVER="true"
PREFEROVER="xf86-video-vesa"
DEPENDS="xf86-video-intel intel-dri lib32-intel-dri !libgl !lib32-libgl"
CHECKDEPENDS="xf86-video-intel"
